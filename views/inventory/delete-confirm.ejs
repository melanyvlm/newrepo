<h1>
    <%= title %>
</h1>

<p>Please confirm deletion - The delete is permanent.</p>
<%- messages() %>
    <form action="/inv/delete" method="post" class="deleteForm">
            <label for="inv_make">Make:</label>
            <input type="text" name="inv_make" id="inv_make" value="<%= locals.inv_make %>" readonly>
            <label for="inv_model">Model:</label>
            <input type="text" name="inv_model" id="inv_model" value="<%= locals.inv_model %>" readonly>
            <label for="inv_year">Year:</label>
            <input type="number" name="inv_year" id="inv_year" value="<%= locals.inv_year %>" readonly>
            <label for="inv_price">Price:</label>
            <input type="number" name="inv_price" id="inv_price" value="<%= locals.inv_price %>" readonly>

            <button type="submit">Delete Vehicle</button>
            <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                <% } %>>
    </form>