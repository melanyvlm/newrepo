<div class="form-register">
  <h1>
    <%= title %>
</h1>


<% errors=(typeof errors !=='undefined' && errors !==null) ? errors : [] %>
    <% if (errors.length> 0) { %>
        <ul class="notice">
            <% errors.forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>
        <%- messages() %>
      <p>All files are required.</p>
      <form id="registerForm" action="/account/register" method="POST">

        <label for="account_firstname">First Name:</label>
        <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>">

        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">

        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">

        <label for="account_password">Password:</label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
          character</span>
        <input type="password" name="account_password" id="account_password" required
          pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

        <button type="submit">Register</button>
      </form>

</div>