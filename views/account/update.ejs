<h2>
    <%= title %>
</h2>


<div class="updatesection">

    <%- messages() %>
        <form id="updateForm" action="/account/update" method="post">
            <div>
                <label for="account_firstname">First Name:</label>
                <input type="text" id="account_firstname" name="account_firstname"
                    value="<%= locals.account_firstname %>" required>
            </div>
            <div>
                <label for="account_lastname">Last Name:</label>
                <input type="text" id="account_lastname" name="account_lastname" value="<%= locals.account_lastname %>"
                    required>
            </div>
            <div>
                <label for="account_email">Email:</label>
                <input type="email" id="account_email" name="account_email" value="<%= locals.account_email %>"
                    required>
            </div>
            <div>
                <input type="hidden" name="account_id" value="<%= locals.account_id %>">
                <button type="submit">Update</button>
            </div>
        </form>
        <form class="account-form" action="/account/change-password" method="post">
            <div class="password-requirements">
                <h2>Update Password:</h2>
                <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1
                    special
                    character</p>
                <p><b>Note:</b> Your original password will be changed</p>
            </div>

            <label for="account_password">New Password:</label>
            <input type="password" id="account_password" name="account_password" required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                placeholder="Enter your new password">
            <label for="account_password_confirmation">Confirm Password:</label>
            <input type="password" id="account_password_confirmation" name="account_password_confirmation" required
                placeholder="Confirm your new password">
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
            <button type="submit">Change Password</button>
        </form>
</div>